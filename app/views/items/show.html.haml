.detail-container
  .main
    %h1.item-name
      = @item.name
    .content
      .item-photo
        .item-photo__top
          = image_tag 'bannar_image', height: '300', width: '300', class: ''
        .item-photo__bottoms
          = image_tag 'bannar_image', class: 'item-photo__bottoms__bottom'
          = image_tag 'bannar_image', class: 'item-photo__bottoms__bottom'
          = image_tag 'bannar_image', class: 'item-photo__bottoms__bottom'
