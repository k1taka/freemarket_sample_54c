%footer
  .footer
    = link_to new_item_path do
      .posting-btn
        .posting-btn__text 出品
        = fa_icon 'camera',class:"posting-btn__icon"
    .banner
      = image_tag "bottom-banner.png", alt: 'mercari', height: '260', width: '100%'
    .content
      .content__cell
        %h2.content__cell__title
          メルカリについて
        %ul
          %li
            =link_to "会社概要（運営会社）","#",class: "content__cell__item"
          %li
            =link_to "採用情報","#",class: "content__cell__item"
          %li
            =link_to "プレスリリース","#",class: "content__cell__item"
          %li
            =link_to "公式ブログ","#",class: "content__cell__item"
          %li
            =link_to "メルカリロゴ利用ガイドライン","#",class: "content__cell__item"
          %ul.social-link
            %li
              = link_to "https://twitter.com/" do
                = fa_icon 'twitter', class: 'social-link__icon'
            %li
              = link_to "https://facebook.com/" do
                = fa_icon 'facebook', class: 'social-link__icon'
            
      .content__cell
        %h2.content__cell__title
          ヘルプ＆ガイド
        %ul
          %li
            =link_to "メルカリガイド","#",class: "content__cell__item"
          %li
            =link_to "らくらくメルカリ便","#",class: "content__cell__item"
          %li
            =link_to "ゆうゆうメルカリ便","#",class: "content__cell__item"
          %li
            =link_to "大型メルカリ便","#",class: "content__cell__item"
          %li
            =link_to "車体取引ガイド","#",class: "content__cell__item"
          %li
            =link_to "メルカリあんしん・あんぜん宣言！","#",class: "content__cell__item"
          %li
            =link_to "偽ブランド品撲滅への取り組み","#",class: "content__cell__item"
          %li
            =link_to "メルカリボックス","#",class: "content__cell__item"
      .content__cell.content__cell--wide
        %h2.content__cell__title
          プライバシーと利用規約
        .content__cell--wide__inner
          %ul
            %li
              =link_to "プライバシーポリシー","#",class: "content__cell__item"
            %li
              =link_to "メルカリ利用規約","#",class: "content__cell__item"
            %li
              =link_to "あんしんスマホサポート制度に関する利用特約","#",class: "content__cell__item"
            %li
              =link_to "コンプライアンスポリシー","#",class: "content__cell__item"
          %ul
            %li
              =link_to "個人データの安全管理に係る基本方針","#",class: "content__cell__item"
            %li
              =link_to "特定商取引に関する表記","#",class: "content__cell__item"
            %li
              =link_to "資金決済法に基づく表示","#",class: "content__cell__item"
            %li
              =link_to "法令順守と犯罪抑止のために","#",class: "content__cell__item"
            %li
              =link_to "返品・返金ポリシー","#",class: "content__cell__item"
      .content__cell
        %h2.content__cell__title
          国
        %ul
          %li
            =link_to "日本","#",class: "content__cell__item"
          %li
            =link_to "United States","#",class: "content__cell__item"
    .footer__bottom
      = image_tag "logo_white.png", alt: 'mercari', height: '50', width: '150',class: 'footer__bottom__logo'
      %span.footer__bottom__copyright
        © 2019 Mercari