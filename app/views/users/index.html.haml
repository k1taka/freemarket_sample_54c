%body
  .container
    = render 'shared/side_bar'
    .mypage__box
      %section.mypage
        =link_to "#", class: "mypage__user" do
          .mypage__user__top
          .mypage__user__middle MT
          .mypage__user__bottom
            .mypage__user__bottom__evaluation
              評価
              %span.evaluation-num
                172
            .mypage__user__bottom__exhibit
              出品数
              %span.exhibit-num
                151
      %section.mypage-announce
        %ul.mypage-announce__btn
          %li.mypage-announce__btn__notification
            お知らせ
            -# =link_to '#' do
          %li.mypage-announce__btn__todo
            やることリスト
            -# =link_to '#' do
        .mypage-announce__detail__active
          %ul.detail__box
            - announces.each do |announce|
              %li.detail__box__list
                =link_to "#", class: "detail__box__list__inner" do
                  .detail__image
                    %img.image{ alt: "", "data-src": "//static.mercdn.net/images/mercari_profile.png", src: "//static.mercdn.net/images/mercari_profile.png"}/
                  .detail__text
                    .detail__text__top #{announce[:Name]}
                    %time.detail__text__time
                      .detail__text__time__icon
                        = fa_icon 'twitter', class: "far icon"
                      %span.detail__text__time__num 9時間前
                  = fa_icon 'chevron-right', class: "announce-icon"
            %li.list__go
              =link_to "#", class: "list__go__inner" do
                一覧を見る
      %section.buyed-item
        .buyed-item__title
          購入した商品
        %ul.status__list
          %li.status__list__doing
            取引中
          %li.status__list__past
            過去の取引
        .buyed-item__list
          %ul.item__list__box
            - transactions.each do |transaction|
              %li.item__list__box__detail
                =link_to "#", class: "item__list__box__detail__link" do
                  .buyed__image
                    %img.buyed__image__photo{ alt: "", "data-src": "//static.mercdn.net/images/mercari_profile.png", src: "//static.mercdn.net/images/mercari_profile.png"}/
                  .buyed__text
                    .buyed__text__top #{transaction[:Name]}
                    .buyed__text__time 取引完了
                  = fa_icon 'chevron-right', class: "announce-icon"
            %li.buyed-list__go
              =link_to "#", class: "buyed-list__go__inner" do
                一覧を見る
