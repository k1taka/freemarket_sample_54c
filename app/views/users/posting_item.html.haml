.container
  = render 'shared/side_bar'
  .mypage__box
    %section.buyed-item
      .buyed-item__title
        出品した商品
      %ul.status__tab
        %li.status__tab__doing
          出品中
        %li.status__tab__past
          = link_to "売却済",sold_item_user_path(@user)
      .buyed-item__list
        %ul.item__box
          - @items.each do |item|
            %li.item__box__list
              =link_to item_path(item), class: "item__box__list__link" do
                .buyed__image
                  -if item.images[0]
                    %img.buyed__image__photo{ alt: "", "data-src": "//static.mercdn.net/images/mercari_profile.png", src: item.images[0].image.url,width:"30"}
                  -else
                    %img.buyed__image__photo{ alt: "", "data-src": "//static.mercdn.net/images/mercari_profile.png", src: "//static.mercdn.net/images/mercari_profile.png"}/
                .buyed__text
                  .buyed__text__top #{item.name}
                  .buyed__text__time 出品中
                = fa_icon 'chevron-right', class: "announce-icon"